@model IEnumerable<ZooKing.Models.Animal>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="Extra" style="display:inline-block">
    <p>

        @using (Html.BeginForm())
        {
        <p>
            גיל: @Html.TextBox("age") <br />
            סוג: @Html.TextBox("Type") <br />
            שם:  @Html.TextBox("Name") <br />
            <br />
            <input type="submit" value="Filter" />

            <br /> 
            @Html.ActionLink("קבץ", "GroupBy", 1 )  
        </p>
        }
   
    @Html.ActionLink("הוסף", "Create")
</div>
<p>
    <input id="btnAjax" name="btnAjax" type="button" value="ממוצע גיל החיות" />
    <div id="avg" style="background-color:red"> </div>
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Area.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Area.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    <img src=@Html.DisplayFor(modelItem => item.Picture) alt="" style="width:267px;height:267px;">
                </td>
                <td>
                    @Html.ActionLink(" האזור של החיה", "AnimalInArea", new { id = item.ID })
                    @Html.ActionLink("פרטים", "Details", new { id = item.ID })
                    <div class="Extra" style="display:inline-block">
                        |
                        @Html.ActionLink("ערוך", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("מחק", "Delete", new { id = item.ID })
                    </div>
                </td>
            </tr>

        }

    </table>



@section Scripts {
    <script>
    $('#btnAjax').click(function () {
        $.ajax({
            url: '/Animal/GetAnimals',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html'

        })
        .success(function (result) {
            $('#avg').html(result);
        })
        .error(function (xhr, status) {
            alert(status);
        })
    });
    </script>
}
